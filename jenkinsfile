pipeline {
    agent any

    Environment {
        VERCEL = credentials('vercel_token')
    }
    stages {
        stage ('Install') {
            steps {
                bat 'npm install'
            }
        }
        stage ('Test') {
            steps {
                echo 'Skipping Test - No tests available'
            }
        }
        stage ('Build') {
            steps {
                bat 'npm run build'
            }
        }
        stage ('Deploy') {
            steps {
                bat 'npx vercel --prod --yes --token-%VERCEL%'
            }
        }
    }
}
